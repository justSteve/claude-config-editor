# Environment Configuration
# Copy this file to .env and modify as needed

# Application Environment
ENVIRONMENT=development  # development, production, testing

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///data/claude_config.db

# API Server Configuration
API_HOST=127.0.0.1
API_PORT=8765
API_RELOAD=true  # Auto-reload on code changes (dev only)

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Snapshot Configuration
SNAPSHOT_RETENTION_DAYS=90  # How long to keep snapshots (0 = forever)
SNAPSHOT_AUTO_COMPRESS=true  # Auto-compress large files
SNAPSHOT_COMPRESS_THRESHOLD_MB=1  # Compress files larger than this

# Security (optional)
API_KEY=  # Optional API key for authentication
CORS_ORIGINS=http://localhost:8765,http://127.0.0.1:8765
